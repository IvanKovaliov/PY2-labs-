using System;

public class LatinLettersArray
{
    private char[] letters;

    public LatinLettersArray(int size)
    {
        letters = new char[size];
        Random random = new Random();
        for (int i = 0; i < size; i++)
        {
            letters[i] = (char)random.Next(65, 91); // Заполнение массива прописными латинскими буквами
        }
    }

    public void SwapSecondAndSecondLast()
    {
        if (letters.Length < 2)
            return;

        int secondIndex = 1;
        int secondLastIndex = letters.Length - 2;

        char temp = letters[secondIndex];
        letters[secondIndex] = letters[secondLastIndex];
        letters[secondLastIndex] = temp;
    }

    public int FindLastYIndex()
    {
        for (int i = letters.Length - 1; i >= 0; i--)
        {
            if (letters[i] == 'Y')
                return i;
        }
        return -1; // Возвращает -1, если 'Y' не найден
    }

    public int CountConsonants()
    {
        int count = 0;
        foreach (char letter in letters)
        {
            // Проверяем, является ли буква согласной
            if (IsConsonant(letter))
            {
                count++;
            }
        }
        return count;
    }

    private bool IsConsonant(char letter)
    {
        // Список согласных букв
        string consonants = "BCDFGHJKLMNPQRSTVWXYZ";
        return consonants.Contains(letter);
    }

    public void PrintArray()
    {
        Console.WriteLine("Массив: " + string.Join(" ", letters));
    }
}

class Program
{
    static void Main(string[] args)
    {
        Console.Write("Введите размер массива: ");
        int size = int.Parse(Console.ReadLine());

        LatinLettersArray array = new LatinLettersArray(size);
        Console.WriteLine("Исходный массив:");
        array.PrintArray();

        array.SwapSecondAndSecondLast();
        Console.WriteLine("Массив после обмена второго и предпоследнего элементов:");
        array.PrintArray();

        int lastYIndex = array.FindLastYIndex();
        if (lastYIndex != -1)
        {
            Console.WriteLine($"Индекс последнего 'Y': {lastYIndex}");
        }
        else
        {
            Console.WriteLine("Символ 'Y' не найден в массиве.");
        }

        Console.WriteLine($"Количество согласных букв: {array.CountConsonants()}");
    }
}